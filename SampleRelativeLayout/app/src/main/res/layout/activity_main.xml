<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<Button
		android:id="@+id/button01"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:text="로그인 화면"
		android:textSize="18dp"
		android:textStyle="bold"
		android:onClick="onButton1Clicked"
		/>
	
	<Button
		android:id="@+id/button02"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:text="중첩되는 뷰"
		android:textSize="18dp"
		android:textStyle="bold"
		android:onClick="onButton2Clicked"
		/>
	
	<Button
		android:id="@+id/button03"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:text="가운데 꽉 채우기"
		android:textSize="18dp"
		android:textStyle="bold"
		android:onClick="onButton3Clicked"
		/>

	<Button
		android:id="@+id/button04"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:text="테이블 레이아웃"
		android:textSize="18dp"
		android:textStyle="bold"
		android:onClick="onButton4Clicked"
		/>

	<Button
		android:id="@+id/button05"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:text="테이블 레이아웃2"
		android:textSize="18dp"
		android:textStyle="bold"
		android:onClick="onButton5Clicked"
		/>

	<Button
		android:id="@+id/button06"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:text="프레임 레이아웃"
		android:textSize="18dp"
		android:textStyle="bold"
		android:onClick="onButton6Clicked"
		/>
</LinearLayout>